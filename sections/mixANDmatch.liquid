<div id="section_mix" class="mt-0">
    <div id="category2">
            <div id="carouselExampleControls" class="carousel slide">
                    <a class=" w-100 h-100" href="#carouselExampleControls" role="button" data-slide="next">
                            <div class="carousel-inner h-100 d-block text-center">
                                    {%for product in collections[section.settings.feature_collection].products %}
                                    <div class="carousel-item">
                                        <img src="{{product.featured_image | img_url : "large"}}" alt="">
                                    </div>
                                    {%endfor%}
                                    <div class="carousel-item active text-center h-100">
                                            <h1 class="d-flex justify-content-center align-items-center h-100">Mix & Match</h1>
                                          </div>
                                 
                                
                                </div>
                  </div>  

    
</div>
</div>  
    
    <style>
    
    #section_mix{
    
        width: 100%;
        background-color:{{section.settings.section_menu}};
        height: 50vh;
    }

    #section_mix #category2 {
        border: 1px solid white;
        height: 100%;
        width: 100%;
    }

    #section_mix img{
        height: 100%;
    }

#carouselExampleControls{
    height: 100%;
    width: 100%;
}
  
    </style>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    
    {% schema %}
        {
    
            "name": "Section IIM Mix&Match",
            "settings": [
          
                {
                    "type": "color",
                    "id": "section_menu",
                    "label": "Background color",
                    "default": "#FF7272"
                },
                {
                    "type": "collection",
                    "id": "feature_collection",
                    "label": "Feature collection"
                }
                
            ],
            
    
            "presets": [
                {
                    "name": "Etape 3",
                    "category": "Cours IIM" 
                }
            ]
        }
    
    {% endschema %}
    
    
    
